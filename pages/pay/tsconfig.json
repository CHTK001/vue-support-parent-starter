{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["../../packages/*"],
      "@/*": ["./src/*"]
    },
    "types": []
  },
  "include": ["src/**/*"]
}
