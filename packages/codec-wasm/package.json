{
  "name": "@repo/codec-wasm",
  "version": "1.0.0",
  "description": "WebAssembly implementation of codec utilities for encryption/decryption",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "files": [
    "src/",
    "build/",
    "assembly/"
  ],
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release --runtime stub",
    "asbuild": "npm run asbuild:release",
    "build": "npm run asbuild && node scripts/fix-build.mjs",
    "test": "node test/wasm-test.js",
    "dev": "vite"
  },
  "keywords": [
    "webassembly",
    "wasm",
    "assemblyscript",
    "crypto",
    "codec",
    "encryption",
    "decryption"
  ],
  "author": "CH",
  "license": "MIT",
  "devDependencies": {
    "assemblyscript": "^0.28.8",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.28.8",
    "sm-crypto": "^0.3.13"
  }
}
